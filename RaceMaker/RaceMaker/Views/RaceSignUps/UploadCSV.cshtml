@model RaceMaker.Models.RaceSignUp

@{
    ViewBag.Title = "UploadFile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid body-content" align='center'>
    <h2>Upload CSV Entries</h2>
</div>
<div class="container-fluid body-content" align='center'>
   
        @using (Html.BeginForm("UploadCSV", "RaceSignUps", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div style="padding-bottom: 10px">
                <input type="file" name="File" id="File" />
                </div>
                <div style="padding-bottom: 10px">
                    <input type="submit" name="Submit" value="Upload" />
                    </div>
                    <span>@ViewBag.Message</span>
                    }
                </div>
<div class="container-fluid body-content" align='right'>
    
        <img src="~/Images/runnerStart.jpg" alt="RaceImage" />
    
</div>


    @*{

            <div>
                @Html.TextBox("CSV", "", new { type = "file" }) <br />


                    <input type="submit" value="Upload" />

                    @ViewBag.Message

                </div>
        }
        <p>

        </p>

        Html.ActionLink("Back to List", "Index") |
            @Html.ActionLink("Back to Race Details", "Details", new { id = Model.ID })*@
